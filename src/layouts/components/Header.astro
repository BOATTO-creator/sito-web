---
import logo from "../../assets/logo/logo.svg";
import Button from "../../components/Button.astro";
import HamburgerButton from "./HamburgerButton.astro";
---

<header class='px-4 lg:px-16 pt-4 flex justify-between items-center'>
  <div class='w-24 sm:w-32'>
    <img class='w-full h-full' src={logo.src} alt='logo boatto' />
  </div>

  <!-- For desktop -->
  <nav class='font-alexandria-r hidden sm:flex gap-8'>
    <div>
      <a href='#storia'>Storia</a>
    </div>
    <div>
      <a href='#servizi'>Servizi</a>
    </div>
    <div>
      <a href='#contatti'>Contatti</a>
    </div>
  </nav>
  <Button type='1' to='#preventivo' extraClass='hidden sm:block'
    >Preventivo</Button
  >

  <!-- For mobile -->
  <HamburgerButton />
</header>
